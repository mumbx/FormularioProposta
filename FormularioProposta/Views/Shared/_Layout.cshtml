@using Microsoft.AspNetCore.Http;
@{
    string Login = Context.Session.GetString("Login");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FormularioProposta</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-lux.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    

    <header>
    </header>


    <nav class="navbar navbar-expand-lg  navbar-dark p-1" style="background-color:#000000;">


        <a class="navbar-brand" href="/Home/index">Marant</a>
        <button class="btn btn-toolbar d-sm-inline d-xl-none d-md-none" type="button" data-toggle="collapse" data-target="#MarantNav" aria-controls="MarantNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse" id="MarantNav">

            <ul class="navbar-nav mr-auto">

                <li class="nav-item active">
                    <a class="nav-link" href="/Home/index">Início<span class="sr-only"></span></a>
                </li>

                <li class="nav-item active">
                    <a class="nav-link" href="/Home/index">Serviços<span class="sr-only"></span></a>
                </li>

                <li class="nav-item active">
                    <a class="nav-link" href="/home/create">Contato<span class="sr-only"></span></a>
                </li>

                @if (Login != null)
                {

                    <li class="nav-item active">
                        <a class="nav-link" href="/propostas/">Propostas<span class="sr-only"></span></a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/logout">Logout<span class="sr-only"></span></a>
                    </li>

                }
                else
                {

                    <li class="nav-item active float-right">
                        <a class="nav-link" href="/Home/login">Login<span class="sr-only"></span></a>
                    </li>

                }
            </ul>
        </div>

    </nav>




    <main>
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>




    <footer class="row" style="height:100px;">


        <div class="col-12 col-md-4 col-xl-4 w-100 align-self-end flex-wrap">
            <div class="col-12 justify-content-center px-2  text-xl-left text-md-left text-center align-self-end">
                <div class="d-none d-xl-inline text-white p-0 m-0">Siga nossas redes sociais:</div>
                <img src="~/images/facebook_icon.png" alt="Facebook Marant" class="img-fluid" style="height:25px;" />
                <a href="https://www.instagram.com/marantconsultoria/" target="_blank" title="Instagram">
                    <img src="~/images/instagram_icon.png" alt="Instagram Marant" class="img-fluid" style="height:25px;" />
                </a>
                <img src="~/images/youtube_icon.png" alt="Youtube Marant" class="img-fluid" style="height:25px;" />
            </div>

        </div>

        <div class="col-12 col-md-4 col-xl-4 w-100 align-self-end  flex-wrap order-1 order-md-1 order-xl-1">

           

        </div>

        <div class="col-12 col-md-4 col-xl-4 w-100 mt-xl-0 mt-md-0 mt-5 justify-content-end align-self-end flex-wrap">

            <div class="col-12 col- p-0 text-center align-self-end">
                <small class="text-muted mx-auto small">&copy; @DateTime.Now.Year - <strong>MARANT</strong></small>
            </div>

        </div>

    </footer>


    <environment include="Development">


        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
                integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
                crossorigin="anonymous">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>



    @RenderSection("Scripts", required: false)
</body>
</html>
