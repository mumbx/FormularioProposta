
@{
    ViewData["Title"] = "Login";
}




<div class="row m-2 py-4 mx-auto justify-content-center w-75 align-self-end">



    <div class="card p-3 shadow rounded">
        <form action="/home/login" method="post">
            <h2 class="form-text text-center">Login</h2>
            <hr class="p-0"/>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="seunome@marant.com.br">
                @Html.ValidationMessage("email")
            </div>
            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" placeholder="Sua senha">
                @Html.ValidationMessage("senha")
                <small id="emailHelp" class="form-text text-muted">Nunca compartilhe sua senha com ninguém</small>
            </div>
            <div class="form-group text-center">

                <button type="submit" class="btn btn-primary">Entrar</button>

            </div>
            @ViewBag.Mensagem
        </form>
       
    </div>

</div>